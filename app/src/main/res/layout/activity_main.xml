<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl00_lay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#836fff"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="italic|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/etNumber01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cecece"
            android:hint="Digite o primeiro numero"
            android:textAlignment="center"
            android:textColor="#000000"
            android:inputType="number"

            android:textColorHint="#000000"
            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/etNumber02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cecece"
            android:hint="Digite o segundo numero"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:inputType="number"

            android:textSize="20dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/btSum"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="#836fff"
            android:text="Soma"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btSub"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="#836fff"
            android:text="Subtração"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btMul"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="#836fff"
            android:text="Multiplicação"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btDiv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="#836fff"
            android:text="Divisão"
            android:textSize="15dp"
            android:textStyle="italic|bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="resultado"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>